    <display-name>Common</display-name>
    <description>
        Classes common to several subprojects
    </description>

    <context-param>
        <param-name>title</param-name>
        <param-value>Common Classes</param-value>
    </context-param>

    <!-- Servlets and their mappings to URLs-->
    <servlet> 
        <servlet-name>CommonServlet</servlet-name>
        <servlet-class>org.teherba.common.CommonServlet</servlet-class>
    </servlet>

    <servlet-mapping> 
        <servlet-name>CommonServlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>

</web-app>
